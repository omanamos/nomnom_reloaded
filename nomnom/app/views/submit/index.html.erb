<%- content_for(:context) do -%>submit<%- end -%>
<div class="submit_info">
	Here you can submit a recipe by filling out the description, ingredients and directions.
</div>
</br>
<form action="<%=url_for :controller => 'submit', :action => 'index'%>" method="get">
	<h6>Information</h6>
	<div id="description_area" class="submit_area">
		Recipe Name: <input id="recipe_name" class="ingredient_text" type="text" maxlength="20" value=""/>
		</br>
		Description: <textarea name="description_text" cols="100" rows="5"></textarea>
	</div>
	</br>
	<h6>Ingredients</h6>
	<div id="ingredient_area" class="submit_area">
		<table class="submit_ingredients">
			<%-
			i = 0;
			while i < 10 -%>
				<tr>
					<td>Amount: <input id="amount_<%= i %>" class="ingredient_text" type="text" maxlength="20" value=""/></td>
					<td>Ingredient: <input id="ingredient_<%= i %>" class="ingredient_text" type="text" maxlength="20" value=""/></td>
				</tr>
			<%-
				i += 1;
			end -%>
		</table>
	</div>
	</br>
	<h6>Directions</h6>
	<div id="directions_area" class="submit_area">
		Directions: <textarea name="directions_text" cols="100" rows="7"></textarea>
	</div>
	<!--<input class="button ingredient_button" type="submit" value="Add Ingredient"/>-->
	</br>
	<input class="button submit_button" type="submit" value="Submit Recipe"/>
</form>